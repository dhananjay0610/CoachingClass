<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.QuizReviewActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarOfQuizReviewActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:elevation="5dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar">

        <LinearLayout
            android:layout_width="1.2dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:background="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="40dp"
            android:paddingEnd="2dp"
            android:text="Quiz Review"
            android:textColor="#000"
            android:textSize="22dp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarOfQuizReviewActivity"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:gravity="bottom"
        android:paddingStart="5dp"
        android:paddingBottom="8dp"
        android:text="The Questions : "
        android:textSize="24dp"
        android:textStyle="bold" />

    <GridView
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:columnWidth="80dp"
        android:gravity="center"
        android:backgroundTint="#fff"
        android:horizontalSpacing="4dp"
        android:numColumns="auto_fit"
        android:scrollbarFadeDuration="@integer/config_navAnimTime"
        android:scrollbars="vertical"
        android:stretchMode="spacingWidthUniform"
        android:verticalSpacing="1dp" />

    <LinearLayout
        android:id="@+id/mar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grid"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@color/fui_transparent"
            android:backgroundTint="#fff"
            android:elevation="1dp"
            android:padding="9dp"
            android:paddingStart="21dp"
            android:paddingEnd="1dp"
            android:text="@string/marks"
            android:textColor="@color/colorBlack"
            android:textSize="21dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TotalMarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/fui_transparent"
            android:backgroundTint="#fff"
            android:elevation="1dp"
            android:text="@string/loading"
            android:textColor="@color/colorBlack"
            android:textSize="21dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mar"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@color/fui_transparent"
            android:backgroundTint="#fff"
            android:elevation="1dp"
            android:padding="9dp"
            android:paddingStart="21dp"
            android:paddingEnd="2dp"
            android:text="Accuracy : "
            android:textColor="@color/colorBlack"
            android:textSize="21dp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/accuracyProgressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="#000"
            android:max="100"
            android:padding="3dp"
            android:progress="0"
            android:progressDrawable="@drawable/custom_progress" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mar2"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@color/fui_transparent"
            android:backgroundTint="#fff"
            android:elevation="1dp"
            android:padding="9dp"
            android:paddingStart="21dp"
            android:paddingEnd="1dp"
            android:text="Total Attempts : "
            android:textColor="@color/colorBlack"
            android:textSize="21dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TotalAttempt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/fui_transparent"
            android:backgroundTint="#fff"
            android:elevation="1dp"
            android:text="@string/loading"
            android:textColor="@color/colorBlack"
            android:textSize="21dp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/ButtonQuestionReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mar1"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:padding="16dp"
        android:textAllCaps="false"
        android:text="Get all question detail"
        android:textColor="#fff" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.QuizReviewActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarOfQuizReviewActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:elevation="5dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar">

        <LinearLayout
            android:layout_width="1.2dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:background="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="40dp"
            android:paddingEnd="2dp"
            android:text="Quiz Review"
            android:textColor="#000"
            android:textSize="22dp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarOfQuizReviewActivity"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:gravity="bottom"
        android:paddingStart="5dp"
        android:paddingBottom="8dp"
        android:text="The Questions : "
        android:textSize="24dp"
        android:textStyle="bold" />

    <GridView
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:backgroundTint="#fff"
        android:columnWidth="70dp"
        android:gravity="center"
        android:horizontalSpacing="4dp"
        android:numColumns="auto_fit"
        android:scrollbarFadeDuration="@integer/config_navAnimTime"
        android:scrollbars="vertical"
        android:stretchMode="spacingWidthUniform"
        android:verticalSpacing="1dp" />

    <LinearLayout
        android:id="@+id/tp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid"
        android:layout_marginStart="18dp"
        android:layout_marginTop="9dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:src="@drawable/ic_green" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Correct "
            android:textSize="16dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Wrong "
            android:textSize="16dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Unattempted "
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tp"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@color/fui_transparent"
            android:backgroundTint="#fff"
            android:elevation="1dp"
            android:padding="9dp"
            android:paddingStart="21dp"
            android:paddingEnd="1dp"
            android:text="@string/marks"
            android:textColor="@color/colorBlack"
            android:textSize="21dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TotalMarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/fui_transparent"
            android:backgroundTint="#fff"
            android:elevation="1dp"
            android:text="@string/loading"
            android:textColor="@color/colorBlack"
            android:textSize="21dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mar"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@color/fui_transparent"
            android:backgroundTint="#fff"
            android:elevation="1dp"
            android:padding="9dp"
            android:paddingStart="21dp"
            android:paddingEnd="2dp"
            android:text="Accuracy : "
            android:textColor="@color/colorBlack"
            android:textSize="21dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/accuracyProgressValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10%" />

            <ProgressBar
                android:id="@+id/accuracyProgressBar"
                style="@style/ResultProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="50" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mar2"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@color/fui_transparent"
            android:backgroundTint="#fff"
            android:elevation="1dp"
            android:padding="9dp"
            android:paddingStart="21dp"
            android:paddingEnd="1dp"
            android:text="Total Attempts : "
            android:textColor="@color/colorBlack"
            android:textSize="21dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TotalAttempt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/fui_transparent"
            android:backgroundTint="#fff"
            android:elevation="1dp"
            android:text="@string/loading"
            android:textColor="@color/colorBlack"
            android:textSize="21dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mar1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textOfProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="8dp"
            android:text="C/W/U : ..."
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="21sp" />

        <ProgressBar
            android:id="@+id/twoprogress"
            style="@style/MyProgressBarTwo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:progress="0"
            android:secondaryProgress="10"
            android:theme="@style/MyProgressBarTwo" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp">

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/circularProgressBar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:tooltipText="200"
                app:cpb_background_progressbar_color="#b6bbd8"
                app:cpb_background_progressbar_width="20dp"
                app:cpb_progress_direction="to_right"
                app:cpb_progressbar_color="#3f51b5"
                app:cpb_progressbar_width="10dp"
                app:cpb_round_border="true" />

            <TextView
                android:id="@+id/centerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="30%" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ButtonQuestionReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mar1"
            android:backgroundTint="@color/black"
            android:gravity="start"
            android:padding="16dp"
            android:text="Get all question detail"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <Button
            android:id="@+id/seeClassResultButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mar1"
            android:backgroundTint="@color/black"
            android:gravity="end"
            android:padding="16dp"
            android:text="Whole class result"
            android:textAllCaps="false"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/quizReviewProgressbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gradientstart"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/quizProgressbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gradientstart"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="visible" />


    </LinearLayout>
</RelativeLayout>